@model IEnumerable<Geonorge.Symbol.Models.SymbolPackage>
@section breadcrumb {
    <li><a href="~/symbol/">Symbol</a></li>
    <li>Symbolpakker</li>
}
@{
    ViewBag.Title = "Symbolpakker";
}

<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1>
                Symbolerpakker
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfficialStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theme)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfficialStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Theme)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SystemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SystemId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SystemId })
        </td>
    </tr>
}
</table>
<div class="clearfix"></div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden-print">
    <a class="hidden-print show-loading-animation pull-left" data-loading-message="Henter innhold" href="/">Tilbake</a>
    @if (Request.IsAuthenticated)
    {
        <a class="btn btn-default btn-space pull-right" href="~/symbolpackages/Create">Registrer pakke</a>
    }

</div>


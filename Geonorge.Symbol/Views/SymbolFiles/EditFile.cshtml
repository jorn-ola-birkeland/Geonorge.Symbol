@model Geonorge.Symbol.Models.SymbolFile

@section breadcrumb {
    <li><a href="~/files/index">Symbol</a></li>
    <li><a href="~/files/details/@Model.Symbol.SystemId">@Model.Symbol.Name</a></li>
    <li>Rediger @Model.FileName</li>
}
@{
    ViewBag.Title = "Rediger fil";
}

<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1>
                Rediger @Model.FileName
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "symbolfileform" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <input type="hidden" name="SystemId" value="@Model.SystemId" />
        <div class="form-group">
            @Html.Label("Filnavn", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                <input type="text" id="FileName" name="FileName" value="@Model.FileName" />
            </div>
            @Html.Label("Symbolgrafikk", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.DropDownList("Type", ViewBag.SymbolGraphics as SelectList, String.Empty, new { @class = "form-control" })
            </div>
            @Html.Label("Farge", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                <input type="text" name="Color" id="Color" value="@Model.Color" />
            </div>
            @Html.Label("Størrelse", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.DropDownList("Size", ViewBag.Sizes as SelectList, String.Empty, new { @class = "form-control" })
            </div>
            <div class="col-md-1 hidden-print">
                <input type="submit" value="Rediger fil" class="btn btn-default pull-left" />
            </div>
        </div>
            <hr style="margin-top:2px; margin-bottom:6px;" />
    </div>
    <div class="col-md-12">
        <a class="hidden-print show-loading-animation pull-left" data-loading-message="Henter innhold" href="~/files/details?systemid=@Model.Symbol.SystemId">Tilbake</a>
    </div>
}


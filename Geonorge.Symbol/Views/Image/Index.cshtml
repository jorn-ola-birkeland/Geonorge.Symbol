@section breadcrumb {
    <li><a href="~/files/index">Symbol</a></li>
    <li>Bildekonvertering</li>
}

<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1>
                Bildekonvertering
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>


<form action="~/image/create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-12">
                <input required type="file" id="uploadFile" name="uploadFile" style="display:inline;" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label>Konverter til:</label>
                <select name="format">
                    <option value="svg">svg</option>
                    <option value="ai">ai</option>
                    <option value="jpg">jpg</option>
                    <option value="png">png</option>
                    <option value="gif">gif</option>
                </select>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden-print">
            <a class="hidden-print show-loading-animation pull-left" data-loading-message="Henter innhold" href="~/files/index">Tilbake</a>
            <input type="submit" value="Konverter" style="margin-left: 15px;" class="btn btn-default" />
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.FileUrl)) {
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden-print">
            Link til generert fil: <a href="@ViewBag.FileUrl" target="_blank">@ViewBag.FileUrl</a>
        </div>
        }
    </div>
</form>



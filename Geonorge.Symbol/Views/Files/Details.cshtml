@model Geonorge.Symbol.Models.Symbol

@section breadcrumb {
    <li><a href="~/files/index">Symbol</a></li>
    <li>@Model.Name</li>
}
@{
    ViewBag.Title = "Symbol";
}

<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1>
                @Model.Name
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SymbolId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SymbolId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Theme)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theme)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Source)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Source)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SourceUrl)
        </dt>

        <dd>
            <a href="@Model.SourceUrl" target="_blank">@Html.DisplayFor(model => model.SourceUrl)</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SymbolPackages)
        </dt>

        <dd>
            @if(Model.SymbolPackages != null)
            {
                foreach(var symbolpackage in Model.SymbolPackages)
                {
                <a href="~/symbolpackages/details/@symbolpackage.SystemId">@symbolpackage.Name</a><br />
                }
            }
        </dd>

    </dl>
    @foreach (var variant in Model.SymbolFiles.Select(v => v.SymbolFileVariant).Distinct().ToList())
    {
        if (variant != null)
        {
        <h4 style="background-color: gainsboro;">@variant.Name</h4>
            bool first = true;
            foreach (var file in Model.SymbolFiles.Where(v => v.SymbolFileVariant.SystemId == variant.SystemId).ToList().OrderBy(o => o.FileName))
            {
                if (first && !file.FileName.EndsWith(".tif")) { 
                <img src="@file.FileUrl()" height="50" alt="@file.FileName" />
                first = false;
                }
            <div><a href="@file.FileUrl()" target="_blank">@file.FileName</a></div>
            }
        }
        <b>Format:</b> @String.Join(", ", Model.SymbolFiles.Where(va => va.SymbolFileVariant.SystemId == variant.SystemId).Select(f => f.Format).Distinct())
        <br />
        {
            var types = Model.SymbolFiles.Where(va => va.SymbolFileVariant.SystemId == variant.SystemId && !string.IsNullOrEmpty(va.Type)).Select(t => t.Type).Distinct();
            if (types.Any())
            {
            <b>Symbolgrafikk:</b> @String.Join(", ", types) <br />
            }
        }
        {
            var colors = Model.SymbolFiles.Where(va => va.SymbolFileVariant.SystemId == variant.SystemId && !string.IsNullOrEmpty(va.Color)).Select(c => c.Color).Distinct();
            if (colors.Any())
            {
            <b>Farge:</b> @String.Join(", ", colors) <br />
            }
        }

        <a class="btn btn-default btn-space pull-right" style="margin-left: 15px;" href="~/files/DownloadVariant/@variant.SystemId">Last ned</a>
        if (ViewBag.HasAccess)
        {
            <a class="btn btn-default btn-space pull-right" style="margin-left: 15px;" href="~/symbolfiles/edit/@variant.SystemId">Rediger</a>
            <a class="btn btn-default btn-space pull-right" style="margin-left: 15px;" href="~/symbolfiles/delete/@variant.SystemId">Slett</a>
        }
        <p>&nbsp;</p>
    }
    <hr />
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden-print">
        <a class="hidden-print show-loading-animation pull-left" data-loading-message="Henter innhold" href="~/files/index">Tilbake</a>
        @if (ViewBag.HasAccess)
        {
        <a class="btn btn-default btn-space pull-right" style="margin-left: 15px;" href="~/files/Edit/@Model.SystemId">Rediger</a>
        <a class="btn btn-default btn-space pull-right" style="margin-left: 15px;" href="~/symbolfiles/Create/@Model.SystemId">Legg til</a>
        <a class="btn btn-default btn-space pull-right" style="margin-left: 15px;" href="~/files/Download/@Model.SystemId">Last ned alle</a>
        <a class="btn btn-default btn-space pull-right" style="margin-left: 15px;" href="~/files/Delete/@Model.SystemId">Slett</a>
        }
    </div>

</div>
